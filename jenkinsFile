import hudson.model.*
import jenkins.model.*

pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Ingresando Datos Suma'
            }
        }
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Yahir2005/Pipeline_Suma.git'
            }
        }
         stage('Compile Java') {
            steps {
                script {
                    bat "javac Operaciones.java" 
                }
                script {
                    /*
                    def suma1 = 4
                    def suma2 = 6
                    bat "java Operaciones ${suma1} ${suma2}" */
                    bat "java Operaciones 3 5"
                }
            }
        }
    }
}